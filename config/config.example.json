{
  "mode": "private",
  "features": {
    "scheduler": true,
    "debug": false
  },
  "owner": {
    "id": "your-user-id"
  },
  "openrouter": {
    "fastModel": "google/gemini-3-flash-preview",
    "deepModel": "anthropic/claude-sonnet-4.6"
  },
  "memory": {
    "provider": "local",
    "embeddingModel": "openai/text-embedding-3-large",
    "decayAggressiveness": 1.0,
    "reflectionSchedule": "weekly",
    "maxMemories": 100000,
    "archiveThreshold": 0.20,
    "graphDepth": 2
  },
  "telegram": {
    "allowFrom": ["your-telegram-user-id"],
    "adminIds": ["your-telegram-user-id"]
  },
  "cli": {
    "userId": "owner",
    "chatId": "owner",
    "prompt": "you"
  },
  "agent": {
    "maxSteps": 30,
    "maxTokens": 8192,
    "temperature": 0.7
  },
  "exa": {
    "numResults": 5
  },
  "timeouts": {
    "llm": 120000,
    "memory": 10000,
    "search": 30000
  },
  "mcp": {
    "servers": [
      {
        "name": "filesystem",
        "transport": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
        "autoRestart": true
      },
      {
        "name": "my-api",
        "transport": "sse",
        "url": "http://localhost:8000/sse",
        "autoRestart": true
      }
    ]
  },
  "soul": {
    "path": "./config/soul.md",
    "dir": "./config/soul.d"
  },
  "scheduler": {
    "timezone": "America/Los_Angeles"
  },
  "proactive": {
    "tickIntervalMs": 30000,
    "activeHoursStart": 8,
    "activeHoursEnd": 23
  },
  "workspace": "~/.koda"
}
